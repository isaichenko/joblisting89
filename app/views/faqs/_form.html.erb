<div class="row">
  <div class="col-md-12">
    <%= form_for(faq) do |form| %>

      <div class="form-group">
        <%= form.label :Question %>
        <%= form.text_field :question, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :Answer %>
        <%= form.text_area :answer, rows: 10, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit "Submit", class: 'btn btn-primary btn-block float-right' %>
      </div>
    <% end %>
  </div>
</div>
<br>