<div class="faq-section pl-3">
<% @faqs.each.with_index(1) do |faq, key| %>
    <div class="row">
        <div class="col-md-2 text-right">
            <span class="faq-index"><%= key %>. Questions?</span>
        </div>
        <div class="col-md-9">
            <%= faq.question %>
        </div>
    </div>
    <div class="row ">
        <div class="col-md-2 answer-section text-right">
            Answer.
        </div>
        <div class="col-md-9">
            <%= faq.answer %>
        </div>
    </div>
<% end %>
</div>