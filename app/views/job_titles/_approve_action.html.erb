<div class="modal-header">
  <h5 class="modal-title" id="approveModalCenterTitle">Link Job Title</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  To which Job Title would you like to like this title?
  <br>
  <br>
  <%= form_tag link_title_path(job_title) do %>
        <%= select_tag "parent_id", options_from_collection_for_select(approved_job_titles, "id", "title"), prompt: "Select Your Job Title", class: 'form-control', :required => true %><br>
        <div class="row">
          <div class="col-md-6">
            <%= submit_tag "Link to Job Title", class: 'btn btn-primary btn-block'%>
          </div>
          <div class="col-md-6">
            <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal" align="right">Close</button>
          </div>
        </div>
  <% end %>
</div>
