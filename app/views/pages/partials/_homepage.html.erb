<!-- Recent Posts -->
<div class="container">
	<div class="sixteen columns">
		<h3 class="margin-bottom-25">Recent Posts</h3>
	</div>

	<% @recent_posts.each do |blog| %>
		<div class="one-third column">

			<!-- Post #1 -->
			<div class="recent-post">
				<div class="recent-post-img">
					<%= link_to blog_path(blog) do %>
						<% if blog.featured_image? %>
	            <%= image_tag(blog.featured_image.url, style:"height: 250px; width: 380px;") %>
	          <% else %>
	            <%= image_tag image_generator(height: '498', width: '315'), width: '100%' %>
	          <% end %>
					<% end %><div class="hover-icon"></div>
				</div>
				<%= link_to blog_path(blog) do %>
          <h4><%= blog.title %></h4>
        <% end %>
				<div class="meta-tags">
					<span><%= blog.published_at.strftime("%B %d, %Y") if blog.published_at? %></span>
				</div>
				<p><%= truncate(blog.content.html_safe, :length => 150, :escape => false, :separator => ' ') %></p>
				<%= link_to "Read More", blog_path(blog), class: 'button' %>
			</div>

		</div>
	<% end %>

</div>
