<% if all_resume.user.status == 'active' %>

    <%= link_to resume_path(all_resume), class: "listing freelance" do %>
      <% if all_resume.profile_pic.present? %>
<!--<<<<<<< HEAD
        <%# image_tag all_resume.profile_pic, style: "height: 130px;" %>
      <%# else %>
        <%# image_tag 'resumes-list-avatar-01.png' %>
======= -->
        <%= image_tag all_resume.profile_pic, style: "height: 130px; width: 130px; margin-right: 20px; border-radius: 10px;"  %>
      <% else %>
        <%= image_tag ('resumes-list-avatar-01.png'), width: '100%', style: "height: 100%; margin-right: 20px; border-radius: 10px;" %>
      <% end %>
    <div class="resumes-list-content">
      <h4><%= all_resume.first_name %> <%= all_resume.last_name %> <span><%= all_resume.desired_job_title %></span></h4>
      <span><i class="fa fa-university"></i> <%= all_resume.degree %></span>
      <span><i class="fa fa-map-marker"></i> <%= all_resume.city %></span>
      <span><i class="fa fa-money"></i> $<%= all_resume.desired_salary_per_month %> / month</span>

      <div class="skills">
        <% all_resume.skills.each do |skill| %>
        <span><%= skill.title %></span>
        <% end %>
      </div>
      <div class="clearfix"></div>

    </div>
    <% end %>
    <div class="clearfix"></div>

<% end %>
