<!-- Banner
================================================== -->
<div id="banner" class="with-transparent-header parallax background header-image-non-login" data-img-width="2000" data-img-height="1330" data-diff="300">
	<div class="container">
		<div class="sixteen columns">

			<div class="search-container">
				<h2>Find Company</h2>
				<div>
			<%= link_to 'Find Job', root_path, class: 'button dark' %>
			<%= link_to 'Find Resume', find_resume_path, class: 'button dark' %>
			<%= link_to 'Find Company', find_company_path, class: 'button' %>
			</div>

				<%= form_with method: :get, local: true, url: allcompanies_path do |f| %>
		        <%= f.text_field :q, class: "ico-01", placeholder: "Company name, Industry", value: "" %>

		        <%= f.text_field :city, multiple: true, class: "ico-02", placeholder: "City, Country", value: ""  %>

		        <%= button_tag( :class => "button") do %>
						  <i class="fa fa-search"></i>
						<% end %>
		    <% end %>

			</div>

		</div>
	</div>
</div>

<%= render 'pages/partials/homepage' %>
