<div class="pl-3">
    <h2>Manage JobSeeker</h2>
    <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col" class="text-center" >Name</th>
        <th scope="col" class="text-center">Joined_Date</th>
        <th scope="col" class="text-center">Resume Last Updated Date</th>
        <th scope="col" class="text-center">Number of Jobs Applied</th>
        <th scope="col" class="text-center">Status</th>
        <th scope="col" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody id="job_seekers">
        <% @job_seekers.each do |job_seeker| %>
            <tr>
                <th scope="row"><%= job_seeker.id %></th>
                <td class="text-center"><%= link_to job_seeker.name, '' %></td>
                <td class="text-center"><%= job_seeker.created_at %></td>
                <td class="text-center"><%= job_seeker.created_at %></td>
                <td class="text-center"><%= link_to job_seeker.resumes.count, applied_jobs_path(job_seeker.id) %></td>
                <td class="text-center"></td>
                <td class="text-center"></td>
            </tr>
        <% end %>
    </tbody>
    </table>
</div>