<div class="container">

	<!-- Recent Jobs -->
	<div class="eleven columns">
	<div class="padding-right">
		<h3 class="margin-bottom-25">Recent Jobs</h3>
		<div class="listings-container">

			<!-- Listing -->
			<% @recent_jobs.each do |job| %>
				<%= link_to job, class: "listing #{job.job_type.title}" do %>
					<div class="listing-logo">
						<%= image_tag "job-list-logo-01.png", alt: "" %>
					</div>
					<div class="listing-title">
						<h4><%= job.title %> <span class="listing-type"><%= job.job_type.title %></span></h4>
						<ul class="listing-icons">
							<li><i class="ln ln-icon-Management"></i> <%= pluralize(job.experience, 'year') %></li>
				      <li><i class="ln ln-icon-Map2"></i> <%= job.first_company.city %></li>
				      <li><i class="ln ln-icon-Money-2"></i> $<%= job.salary_min %>-$<%= job.salary_max %></li>
				      <li><div class="listing-date new">
				        <% if job.updated_at < (Time.now - 1.days) %>
				          <%= job.updated_at.strftime("%B %d, %Y")%>
				        <% else %>
				          new
				        <% end %>
				      </div></li>
						</ul>
					</div>
				<% end %>
			<% end %>

		</div>

		<%= link_to alljobs_path, class: 'button centered' do %>
			<i class="fa fa-plus-circle"></i> Show More Jobs
		<% end %>
		<div class="margin-bottom-55"></div>
	</div>
	</div>

	<!-- Job Spotlight -->
	<div class="five columns">
		<h3 class="margin-bottom-5">Job Spotlight</h3>

		<!-- Navigation -->
		<div class="showbiz-navigation">
			<div id="showbiz_left_1" class="sb-navigation-left"><i class="fa fa-angle-left"></i></div>
			<div id="showbiz_right_1" class="sb-navigation-right"><i class="fa fa-angle-right"></i></div>
		</div>
		<div class="clearfix"></div>

		<!-- Showbiz Container -->
		<div id="job-spotlight" class="showbiz-container">
			<div class="showbiz" data-left="#showbiz_left_1" data-right="#showbiz_right_1" data-play="#showbiz_play_1" >
				<div class="overflowholder">

					<ul>
						<% @spotlight_jobs.each do |job| %>
							<li>
								<div class="job-spotlight">
									<%= link_to job do %>
									<h4><%= job.title %> <span class="<%= job.job_type.title %>"><%= job.job_type.title %></span></h4>
										<% end %>
									<span><i class="fa fa-briefcase"></i> <%= pluralize(job.experience, 'year') %></span>
									<span><i class="fa fa-map-marker"></i> <%= job.first_company.city %></span>
									<span><i class="fa fa-money"></i> $<%= job.salary_min %>-$<%= job.salary_max %></span>
									<p><%= truncate(job.description.html_safe, :length => 55, :escape => false, :separator => ' ') %></p>
									<%= link_to 'Apply For This Job', job, class: "button" %>
								</div>
							</li>
						<% end %>
					</ul>
					<div class="clearfix"></div>

				</div>
				<div class="clearfix"></div>
			</div>
		</div>

	</div>
</div>





