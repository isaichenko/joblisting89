<% if !user_signed_in? %>
<div id="banner" class="with-transparent-header parallax background header-image-non-login" data-img-width="1840" data-img-height="1226" data-diff="300">
<% elsif current_user.role == :superadmin %>
<div id="banner" class="with-transparent-header parallax background header-image-admin-homepage" data-img-width="1840" data-img-height="1226" data-diff="300">
	<% else %>
<div id="banner" class="with-transparent-header parallax background header-image-non-login" data-img-width="1840" data-img-height="1226" data-diff="300">
<% end %>
	<div class="container">
		<div class="sixteen columns">

			<div class="search-container">
				<h2>Find Job</h2>
				<div>
					<%= link_to 'Find Job', root_path, class: "button" %>
					<%= link_to 'Find Resume', find_resume_path, class: 'button dark' %>
					<%= link_to 'Find Company', find_company_path, class: 'button dark' %>
				</div>

				<%= form_with method: :get, local: true, url: alljobs_path do |f| %>
		        <%= f.text_field :q, class: "ico-01", placeholder: "Job title, Skills", value: "" %>

		        <%= f.text_field :city, multiple: true, class: "ico-02", placeholder: "City, State", value: ""  %>

		        <%= button_tag( :class => "button") do %>
						  <i class="fa fa-search"></i>
						<% end %>
		    <% end %>


				<!-- Announce -->
