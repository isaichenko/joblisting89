<div class="row">
<div class="col-md-3">
  <div class="sidebar">
    <%= form_with method: :get, local: true, url: alljobs_path, id: "alljobs" do |f| %>
      <h5>Sort:</h5>
      <div class="form-group">
      <%= f.select :sort_by, options_for_select(Job::SORT_PARAMS.keys.collect{ |t| [t.humanize, t] }, params[:sort_by]), {}, class: "form-control" %>
      </div>

      <hr />
      <h5>Filter:
        <% if @filter_active %>
          <span style="font-size: 15px;">
            <%= link_to "(clear)", alljobs_path %>
          </span>
        <% end %>
      </h5>

      <%= render "filter", arr: @all_jobs.aggs['title'], form: f, title: "Job title", name_inp: :job_title %>
      <br />
      <div>
      Experience level <br />
      <% Job::EXPERIENCE_LEVELS.keys.each do |exp| %>
        <div class="form-check">
          <%= f.check_box :experience, { multiple: true, checked: (true if params[:experience]&.include?(exp)), id: exp, class: "form-check-input"}, exp, nil %>
        <%= f.label :experience, for: exp, class: "form-check-label" do %>
          <% counter = experience_counter(@all_jobs.aggs, exp) %>
          <%= exp.humanize %> <% if counter %>(<%= counter %>)<% end %>
        <% end %>
        </div>
      <% end %>
      </div>
      <br />

      <%= render "filter", arr: @all_jobs.aggs['education.title'], form: f, title: "Education", name_inp: :education, more_btn: false %>
      <br />
      <%= render "filter", arr: @all_jobs.aggs['job_type.title'], form: f, title: "Job type", name_inp: :job_type %>
        <br />
      <%= render "filter", arr: @all_jobs.aggs['city'], form: f, title: "City", name_inp: :city %>


      <%= f.hidden_field :q, value: params[:q] %>
      <%= f.hidden_field :address, value: params[:address] %>
      <!--<%= f.submit "Update", class: "btn btn-primary", name: nil %>-->
    <% end %>

  </div>
</div>
<div class="col-md-9">
  <% if params[:q].present? %><h6>Results for: <i><%= params[:q] %></i></h6><% end %>
<h2>All Jobs List</h2>
<table class="table table-striped">
  <% if @all_jobs.size > 0 %>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Company</th>
      <th scope="col">Type of Job</th>
      <th scope="col">Job Area</th>
      <th scope="col">Pay range USD</th>
      <th scope="col">Posted at</th>
      <th scope="col">Expiry Date</th>
      <% if user_signed_in? %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody id="jobs">
    <%= render partial: 'all_job', collection: @all_jobs %>
  </tbody>
  <% else %>
    <tr><td>No results</td></tr>
  <% end %>
</table>
</div>

