<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>
  <% @jobs.each do |j| %>
    <div class="media text-muted pt-3">
      <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="<%= placeholder_img(j.user.companies.first.logo, 'logo') %>" data-holder-rendered="true">
      <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <strong class="d-block text-gray-dark"><%= link_to j.user.companies.first.title, company_path(j.user.companies.first)  %></strong>
        Posted a Job "<%= link_to j.title, job_path(j)  %>", on
        <%= j.created_at.strftime('%D') %></p>
    </div>
  <% end %>
</div>