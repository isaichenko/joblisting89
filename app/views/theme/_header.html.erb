<% if current_page?(root_path) %>
	<header class="transparent sticky-header">
<% else %>
	<header class="sticky-header">
<% end %>
<div class="container">
	<div class="sixteen columns">

		<!-- Logo -->
		<div id="logo">
			<h1><%= link_to image_tag("logo.png", alt: "Work Scout"), root_path %><h1>
		</div>
		<!-- Menu -->
		<nav id="navigation" class="menu">
			<ul id="responsive">

				<li><%= link_to "Home", root_path, id: "current" %></li>

				<li><a href="#">For Candidates</a>
					<ul>
						<li><%= link_to 'Browse Jobs', alljobs_path %></li>
						<li><%= link_to 'Bookmarked Jobs', bookmarked_jobs_path %></li>
						<li><%= link_to 'Browse Companies', allcompanies_path %></li>
						<li><a href="browse-categories.html">Browse Categories</a></li>
						<li><%= link_to 'Add Resume', new_resume_path %></li>
						<li><%= link_to 'Manage Resumes', resumes_path %></li>
						<li><a href="job-alerts.html">Job Alerts</a></li>
					</ul>
				</li>

				<li><a href="#">For Employers</a>
					<ul>
						<li><%= link_to 'Add Job', new_job_path %></li>
						<li><%= link_to 'Manage Jobs', jobs_path %></li>
						<li><%= link_to 'Add Company', new_company_path %></li>
						<li><%= link_to 'Manage Companies', companies_path %></li>
						<li><a href="manage-applications.html">Manage Applications</a></li>
						<li><%= link_to "Browse Resumes", allresumes_path %></li>
						<li><%= link_to "Bookmarked Resumes", bookmarked_resumes_path %></li>
					</ul>
				</li>

				<li><%= link_to 'FAQ', allfaqs_path %></li>

				<li><%= link_to 'Blog', allblogs_path %></li>
			</ul>


			<ul class="float-right">
				<% if user_signed_in? %>
					<li><%= link_to "I am #{interface_button}", toggle_interface_user_path(current_user) %></li>
					<li>
						<%= link_to destroy_user_session_path, method: :delete do %>
							<i class="fa fa-user"></i> Logout, <%= current_user.name %>
						<% end %>
					</li>
				<% else %>
					<li>
						<%= link_to "#{new_user_session_path}#tab2" do %>
							<i class="fa fa-user"></i> Sign Up
						<% end %>
					</li>
					<li>
						<%= link_to new_user_session_path do %>
							<i class="fa fa-lock"></i> Log In
						<% end %>
					</li>
				<% end %>
			</ul>

		</nav>

		<!-- Navigation -->
		<div id="mobile-navigation">
			<a href="#menu" class="menu-trigger"><i class="fa fa-reorder"></i> Menu</a>
		</div>

	</div>
</div>
</header>
<div class="clearfix"></div>
