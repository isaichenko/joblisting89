<div class="row">
    <div class="col-md-12">
        <%= form_for(blog) do |form| %>

            <div class="form-group">
                <%= form.label :Title %>
                <%= form.text_field :title, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <%= form.label :Content %>
                <%= form.text_area :content, rows: 10, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <%= form.label :Publish %>
            </div>
            
            <div class="form-group">
                <%= form.label :Publish %>
            </div>

            <div class="form-group">
                <%= form.label :Categories %>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">All</th>
                            <th scope="col" class="text-center" >Category Name</th>
                            <th scope="col" class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            
            <div class="form-group">
                <%= button_tag 'Add New Category', class: 'btn btn-primary' %>
            </div>

            <div class="form-group">
                <%= form.label :Tags %>
                <%= form.text_field :title, class: 'form-control' %>
            </div> 
            
            <div class="form-group">
                <%= form.text_field :title, class: 'form-control' %>
                <%= button_tag 'Add New Tag', class: 'btn btn-primary' %>
            </div>
            
            <div class="form-group">
                <%= form.label "Featured" %>
                <%= form.file_field :profile_pic, class: 'form-control' %>
            </div>

            <div class="form-group float-right">
                <%= form.submit "Publish", class: 'btn btn-primary' %> 
                <%= form.submit "Save Draft", class: 'btn btn-primary' %> 
            </div>
        <% end %>
    </div>
</div>
