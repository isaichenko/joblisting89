<div class="row">
    <div class="col-md-12">
        <%= form_for(blog) do |form| %>

            <div class="form-group">
                <%= form.label :Title %>
                <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
            </div>
            
            <div class="form-group">
                <%= form.label :Content %>
                <%= form.cktext_area :content, class: 'form-control', ckeditor: { language: 'en'} %>
            </div>
            
            <div class="form-group">
                <%= form.label :Publish %>
            </div>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                        <%= form.label :Publish %>
                    </div>
                    <div class="col-md-2">
                        <span class="badge badge-primary">Immmediately</span>
                    </div>
                    <div class="col-md-3">
                        <%= form.date_field :created_at, class: 'form-control' %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :Categories %>
                <% if @categories.count > 0 %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">All</th>
                                <th scope="col" class="text-center" >Category Name</th>
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                <% end %>
            </div>

            <div class="form-group">
                <div class = "row">
                    <div class="col-md-3 offset-md-7">
                        <%= text_field :category, :name, class: 'form-control', placeholder: 'New Category Name' %>
                    </div>
                    <div class="col-md-2">
                        <%= button_tag class:'btn btn-primary float-right' do %>
                            <i class="fa fa-plus"></i> Add New Category
                        <% end %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :Tags %>
                <div class="row">
                    <div class="col-md-6">
                        <%= form.text_field :title, class: 'form-control', placeholder: 'Show tags added' %>
                    </div>
                </div>
            </div> 
            
            <div class="form-group">
                <div class = "row">
                    <div class="col-md-6">
                        <%= text_field :tag, :name, class: 'form-control', placeholder: 'New tag Name' %>
                    </div>
                    <div class="col-md-2">
                        <%= button_tag class:'btn btn-primary float-right' do %>
                            <i class="fa fa-plus"></i> Add New Tag
                        <% end %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <%= form.label "Featured" %>
                <div class="row">
                    <div class="col-md-6">
                        <%= form.file_field :profile_pic, class: 'form-control' %>
                    </div>
                </div>
            </div>

            <div class="form-group float-right">
                <%= form.submit "Publish", class: 'btn btn-primary' %> 
                <%= form.submit "Save Draft", class: 'btn btn-primary' %> 
            </div>
        <% end %>
    </div>
</div>
