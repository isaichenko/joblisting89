<div class="row">
    <div class="col-md-12">
        <%#= show published or draft %>
        <% if !@blog.new_record? %>
            <% if @blog.status == 1 %>
                <span class="badge badge-primary">Published</span>
            <% else %>
                <span class="badge badge-danger">Draft</span>
            <% end %>
        <% end %>

        <br>
        <%= form_for(@blog) do |form| %>
            <% if @blog.errors.full_messages.any? %>
                <div class="alert alert-danger" role="alert">
                    <% @blog.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </div>
            <% end %>
            

            <div class="form-group">
                <%= form.label :Title %>
                <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
            </div>
            
            <div class="form-group">
                <%= form.label :Content %>
                <%= form.cktext_area :content, class: 'form-control', ckeditor: { language: 'en'}, placeholder: 'Content' %>
            </div>

            <div class="form-group">
                <%= form.label :Publish %>
                <div class="row">
                    <div class="col-md-2 offset-md-1">
                        <%= radio_button_tag 'publish-type', '1', true %>
                        <span class="badge badge-primary">Immmediately</span>
                            <br>
                        <%= radio_button_tag 'publish-type', '0' %>
                        <span class="badge badge-success">Edit</span>
                    </div>
                    <div class="col-md-4">
                        <%= form.datetime_field :published_at, :value =>  Time.now.strftime("%d-%m-%Y %H:%M:%S") , class: 'form-control d-none publish-date' %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :Categories %>
                <div class = "row">
                    <div class = "col-md-6">
                        <% if @categories.any? %>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">All</th>
                                        <th scope="col" class="text-center" >Category Name</th>
                                        <th scope="col" class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @categories.each do |category| %>
                                    <tr>
                                        <td class="text-center"></td>
                                        <td class="text-center"><%= category.name %></td>
                                        <td class="text-center">
                                            <%= link_to '', edit_category_path(category), class: 'fa fa-edit fa-lg text-success' %>
                                            <%= link_to '', category_path(category), method: :delete, class: 'fa fa-trash fa-lg text-danger', data: { confirm: 'Are you sure?' } %>
                                        </td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        <% end %>
                    </div>
                    <div class = "col-md-4">    
                        <%= text_field :category, :name, class: 'form-control', placeholder: 'New Category Name' %>
                    </div>
                    <div class="col-md-2">
                        <%= button_tag class:'btn btn-primary float-right' do %>
                            <i class="fa fa-plus"></i> Add New Category
                        <% end %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <%= form.label :Tags %>
                    </div>
                    <div class="col-md-6">
                        <%= form.label "Featured" %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <%= text_field :tag, :name, class: 'form-control', placeholder: 'Show Tags added' %>
                    </div>
                    <div class="col-md-6">
                        <%= form.file_field :featured_image, class: 'form-control' %>
                        <% if @blog.featured_image? %>
                            <%= image_tag @blog.featured_image.url %>
                            <%= form.label :remove_image %>
                            <%= form.check_box :remove_featured_image %>
                        <% end %>
                    </div>
                </div>
            </div> 
            
            <div class="form-group">
                <div class = "row">
                    <div class="col-md-4">
                        <%= text_field :tag, :name, class: 'form-control', placeholder: 'New Tag Name' %>
                    </div>
                    <div class="col-md-2">
                        <%= button_tag class:'btn btn-primary float-right' do %>
                            <i class="fa fa-plus"></i> Add New Tag
                        <% end %>
                    </div>
                </div>
            </div>

            <div class="form-group float-right">
                <%#= clear a form  %>
                <%#= f.submit "clear", :type => "reset" %>
                <%= form.submit "Publish", class: 'btn btn-success' %> 
                <%= form.submit "Save as Draft", class: 'btn btn-danger' %> 
            </div>
        <% end %>
    </div>
</div>
