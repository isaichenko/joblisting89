<% if defined?(:company)  %>
  <h2><span class="text-primary"><%= @company %></span>'s Jobs List</h2>
<% else %>
  <h2><% Your Jobs List %></h2>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Type of Job</th>
      <th scope="col">Job Area</th>
      <th scope="col">Applicants</th>
      <th scope="col">Invites</th>
      <th scope="col">Posted</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody id="jobs">
    <%= render @jobs %>
  </tbody>
</table>
