<!-- Titlebar
================================================== -->
<div id="titlebar" class="single submit-page">
  <div class="container">

    <div class="sixteen columns">
      <h2><i class="fa fa-list"></i> Your Companies List</h2>
    </div>

  </div>
</div>

<!-- Content
================================================== -->
<div class="container">
  
  <!-- Table -->
  <div class="sixteen columns">

    <p class="margin-bottom-25">Your companies can be viewed or edited below.</p>

    <table class="manage-table resumes responsive-table">
      <thead>
        <tr>
          <th scope="col">Company name</th>
          <th scope="col">Industry</th>
          <th scope="col">Country</th>
          <th scope="col">City</th>
          <th scope="col">Number of employee</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody id="jobs">
        <%= render partial: 'company', collection: @companies %>
      </tbody>
    </table>
  </div>
</div>