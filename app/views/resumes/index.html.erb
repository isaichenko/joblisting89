<!-- Titlebar
================================================== -->
<div id="titlebar" class="single">
  <div class="container">

    <div class="sixteen columns">
      <h2>Manage Resumes</h2>
      <nav id="breadcrumbs">
        <ul>
          <li>You are here:</li>
          <li><%= link_to "Home", root_path %></li>
          <li>Candidate Dashboard</li>
        </ul>
      </nav>
    </div>

  </div>
</div>


<!-- Content
================================================== -->
<div class="container">
  
  <!-- Table -->
  <div class="sixteen columns">

    <p class="margin-bottom-25">Your resume can be viewed, edited or removed below.</p>

    <table class="manage-table resumes responsive-table">

      <tr>
        <th><i class="fa fa-user"></i> Name</th>
        <th><i class="fa fa-file-text"></i> Desired Job Title</th>
        <th></th>
      </tr>

      <!-- Item #1 -->
      <% @resumes.each do |resume| %>
      <tr>
        <td class="title">
          <%= link_to "#{resume.first_name} #{resume.last_name}", resume %>
        </td>
        <td><%= resume.desired_job_title %></td>
        <td class="action">
          <%= link_to edit_resume_path(resume) do %>
            <i class="fa fa-pencil"></i> Edit
          <% end %>
          <%= link_to resume, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-remove"></i> Delete
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>

    <br>

    <%= link_to 'Add Resume', new_resume_path, class: 'button' %>

  </div>

</div>