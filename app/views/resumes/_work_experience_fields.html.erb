<div class="nested-fields">
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
			  <%= f.label :job_title %>
			  <%= f.text_field :job_title, class: 'form-control' %>
			</div>

			<div class="form-group">
			  <%= f.label :company %>
			  <%= f.text_field :company, class: 'form-control' %>
			</div>

			<div class="form-group">
			  <%= f.label :country %>
			  <%= f.text_field :country, class: 'form-control' %>
			</div>

			<div class="form-group">
			  <%= f.label :city %>
			  <%= f.text_field :city, class: 'form-control' %>
			</div>

			<div class="form-group">
        <%= f.label "Job Type" %>
        <%= f.collection_select(:job_type_work_exp, JobType.all, :id, :title, {}, class: 'form-control') %>
      </div>

			<div class="form-group">
			  <%= f.label :i_currently_work_here %>
			  <%= f.check_box :i_currently_work_here, id: "i_currently_work_here" %>
			</div>
		</div>

		<div class="col-md-6">
			<h5>Time Period</h5>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
					  <%= f.label :start_date %>
					  <%= f.date_field :start_date, class: 'form-control' %>
					</div>
				</div>

				<div class="col-md-6" id="end_date_work" style="display:block;">
					<div class="form-group">
					  <%= f.label :end_date %>
					  <%= f.date_field :end_date, class: 'form-control' %>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
					  <%= f.label "Years of experience (set 0 if less than one year)" %>
					  <%= f.number_field :years_of_experience, class: 'form-control' %>
					</div>
				</div>

				<div class="col-md-6">
					<br>
					<div class="form-group">
					  <%= f.check_box :less_than_one_year %>
					  <%= f.label :less_than_one_year %>
					</div>
				</div>
			</div>

			<div class="form-group">
			  <%= f.label :job_description %>
			  <%= f.text_area :job_description, row: 2, class: 'form-control' %>
			</div>

			<div class="row">
				<div class="col-md-8">
					<div class="form-group">
					  <%= f.label "Salary per month (USD)" %>
					  <%= f.number_field :salary, class: 'form-control' %>
					</div>
				</div>

				<div class="col-md-4">
					<br>
					<div class="form-group">
		        <%= f.radio_button :salary_status, 'hide' %>
		        <%= f.label :status, 'Hide' %>
		      <br>
		        <%= f.radio_button :salary_status, 'show' %>
		        <%= f.label :status, 'Show' %>
		      </div>
		    </div>
		  </div>
		</div>
	</div>
	<%= link_to_remove_association 'Remove Work Experience', f, class: "badge badge-danger" %>
	<hr>
</div>
<script type="text/javascript">
  var checkbox = document.getElementById('i_currently_work_here');
  var details_div = document.getElementById('end_date_work');
  checkbox.onchange = function() {
     if(this.checked) {
       details_div.style['display'] = 'none';
     } else {
       details_div.style['display'] = 'block';
     }
  };
</script>
