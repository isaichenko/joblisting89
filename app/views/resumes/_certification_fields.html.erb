<div class="nested-fields">
	<div class="form boxed box-to-clone education-box">
		<div class="form">
		  <%= f.label :title %>
		  <%= f.text_field :title, class: 'form' %>
		</div>

		<h5>Time Period</h5>
		<div class="container">
			<div class="column">
			  <%= f.label :start_date %>
			  <%= f.date_field :start_date, class: 'form' %>
			</div>
			<div class="column">
			  <%= f.label :end_date %>
			  <%= f.date_field :end_date, class: 'form' %>
			</div>
		</div>
		<div class="form">
		  <%= f.label :description %>
		  <%= f.text_area :description, class: 'form' %>
		</div>

		<%= link_to_remove_association f, class: "close-form remove-box button" do %>
			<i class="fa fa-close"></i>
	  <% end %>
</div>
